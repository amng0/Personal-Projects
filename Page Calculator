"""
#add nice GUI
#Create calendar/reading dashboard 
#Add books currently reading 
  -Target completion date  
  -Change target completion date from GUI, update pages read accordingly
"""


import tkinter as tk
window = tk.Tk()

get_page_label = tk.Label(text="Enter Page Count: ")
get_page_label.pack()

get_pages = int(input("Enter Page Count: "))
get_days_to_complete = int(input("Enter Days to Complete: "))

read_each_day = int(get_pages/get_days_to_complete)

print("Pages to Read Each Day: ", read_each_day)

#testing1234 i love you
print("ehllo world")
print("eye")

window.mainloop()
